    <link rel="apple-touch-icon" href="~/Images/Assets/apple-touch-icon.png">
    <link rel="shortcut icon" href="~/Images/Assets/favicon.ico">
    <script src="~/Scripts/dhtmlxSuite/codebase/dhtmlx.js"></script>
    @*<link href="~/Scripts/dhtmlxSuite/codebase/dhtmlx.css" rel="stylesheet" />*@
